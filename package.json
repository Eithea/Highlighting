{
    "name": "highlighting",
    "version": "0.1.0",
    "homepage": "./",
    "author": {
        "name": "Highlighting"
    },
    "private": true,
    "main": "public/electron_main.js",
    "dependencies": {
        "react": "^17.0.2",
        "react-dom": "^17.0.2",
        "react-router-dom": "^5.3.0",
        "react-scripts": "5.0.0",
        "zustand": "^3.7.2"
    },
    "scripts": {
        "react-start": "set BROWSER=NONE && react-scripts start",
        "electron-start": "set DEV=1 && electron .",
        "react-build": "react-scripts build",
        "electron-build-win": "electron-builder --win portable -c.extraMetadata.main=build/electron.js",
        "build-win": "npm run react-build && npm run electron-build-win",
        "test": "react-scripts test",
        "eject": "react-scripts eject"
    },
    "eslintConfig": {
        "extends": [
            "react-app",
            "react-app/jest"
        ]
    },
    "browserslist": {
        "production": [
            ">0.2%",
            "not dead",
            "not op_mini all"
        ],
        "development": [
            "last 1 chrome version",
            "last 1 firefox version",
            "last 1 safari version"
        ]
    },
    "devDependencies": {
        "concurrently": "^5.3.0",
        "electron": "^11.5.0",
        "electron-builder": "^22.14.13",
        "prettier": "2.2.1",
        "wait-on": "^5.2.1"
    },
    "build": {
        "appId": "Highlighting",
        "asar": false,
        "win": {
            "target": [
                "portable"
            ]
        },
        "files": [
            "background_tasks/**/*",
            "build/**/*",
            "python/**/*",
            "public/*",
            "node_modules/**/*",
            "scripts/*"
        ],
        "extends": null
    }
}